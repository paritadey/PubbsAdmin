<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentOption">

    <include
        layout="@layout/app_bar_payment_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/add_bank_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_four_dp"
        android:background="@color/black"
        android:elevation="@dimen/eight_dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/eight_dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/add_bank_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/draw_redistribution"
            android:layout_marginTop="@dimen/four_dp"
            android:padding="@dimen/two_dp"
            android:text="@string/add_bank"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>