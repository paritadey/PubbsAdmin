<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Repair">
    <include
        layout="@layout/app_bar_repair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/circularProgressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:indeterminateDrawable="@drawable/progressbar"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/qr_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/eighty_dp"
        android:background="@color/black"
        android:elevation="@dimen/eight_dp"
        android:paddingBottom="@dimen/eight_dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/eight_dp"
            android:background="@drawable/ic_expand_less_white_24dp" />

        <TextView
            android:id="@+id/draw_redistribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fifty_dp"
            android:layout_marginTop="@dimen/two_dp"
            android:padding="@dimen/two_dp"
            android:text="@string/draw_repair"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

        <TextView
            android:id="@+id/scan_qr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/draw_redistribution"
            android:layout_marginStart="@dimen/fifty_dp"
            android:layout_marginTop="@dimen/four_dp"
            android:padding="@dimen/two_dp"
            android:text="@string/scan_tv"
            android:textColor="@color/white"
            android:textSize="@dimen/eleven_sp" />

        <ImageView
            android:id="@+id/scan_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/eight_dp"
            android:padding="@dimen/eight_dp"
            android:src="@drawable/ic_qr_scan" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>