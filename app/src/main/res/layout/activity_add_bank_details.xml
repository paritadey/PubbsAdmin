<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBankDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/sixty_four_dp">

                <TextView
                    android:id="@+id/add_bank_account_tv"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/eight_dp"
                    android:text="@string/add_bank_account"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/add_bank_account_tv"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/eight_dp"
                    android:paddingBottom="@dimen/eight_dp"
                    android:text="@string/account_description"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/ifsc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/description"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="IFSC"
                    android:textColor="@color/grey_800"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/ifsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ifsc_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/grey_900"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/account_number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ifsc"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="Account number"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_number_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/confirm_account_number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/account_number"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="Confirm account number"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/confirm_account_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/confirm_account_number_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/account_holder_bank_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/confirm_account_number"
                    android:layout_margin="@dimen/sixteen_dp"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="Bank name"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/account_holder_bank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_holder_bank_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/account_holder_branch_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/account_holder_bank"
                    android:layout_margin="@dimen/sixteen_dp"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="Branch name"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/account_holder_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_holder_branch_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/account_holder_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/account_holder_branch"
                    android:layout_margin="@dimen/sixteen_dp"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="Account holder name"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/account_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/account_holder_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/phone_number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/account_holder"
                    android:layout_margin="@dimen/sixteen_dp"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:text="Phone number"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp" />

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_number_layout"
                    android:layout_margin="@dimen/eight_dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/sixteen_sp" />

                <Spinner
                    android:id="@+id/choice_account_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/phone_number"
                    android:layout_margin="@dimen/sixteen_dp"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/fourteen_sp"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fourty_dp"
        android:background="@color/grey_500"
        android:elevation="@dimen/eight_dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/eight_dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/eight_dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>