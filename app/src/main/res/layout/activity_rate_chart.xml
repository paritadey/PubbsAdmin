<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".RateChart">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_four_dp"
            app:srcCompat="@drawable/ic_arrow_back_24dp" />

        <TextView
            android:id="@+id/rate_chart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:layout_marginStart="@dimen/one_fifty_dp"
            android:text="@string/title_activity_rate_chart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/eighty_dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/eighty_dp">

                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/eighty_dp"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:text="@string/time_slab"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/number_picker_1"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time_tv"
                    numberpicker:custom_layout="@layout/number_picker_minute_layout"
                    numberpicker:focusable="false"
                    numberpicker:max="60"
                    numberpicker:min="10"
                    numberpicker:unit="1"
                    numberpicker:value="10" />

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fifty_dp"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:text="@string/price_tv"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/layout_price"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:background="@drawable/edittext_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price_tv">

                    <TextView
                        android:id="@+id/rupee_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/tweleve_dp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp" />

                    <EditText
                        android:id="@+id/rupees_1"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fourty_dp"
                        android:layout_marginTop="@dimen/two_dp"
                        android:backgroundTint="@color/white"
                        android:singleLine="true"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/fourteen_sp" />

                </RelativeLayout>

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/number_picker_2"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/number_picker_1"
                    numberpicker:custom_layout="@layout/number_picker_custom_layout"
                    numberpicker:focusable="false"
                    numberpicker:max="4"
                    numberpicker:min="1"
                    numberpicker:unit="1"
                    numberpicker:value="1" />

                <RelativeLayout
                    android:id="@+id/layout_price_2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    android:background="@drawable/edittext_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_price">

                    <TextView
                        android:id="@+id/rupee_tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/tweleve_dp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp" />

                    <EditText
                        android:id="@+id/rupees_2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fourty_dp"
                        android:layout_marginTop="@dimen/two_dp"
                        android:backgroundTint="@color/white"
                        android:singleLine="true"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/fourteen_sp" />
                </RelativeLayout>

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/number_picker_3"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/number_picker_2"
                    numberpicker:custom_layout="@layout/number_picker_custom_layout"
                    numberpicker:focusable="false"
                    numberpicker:max="6"
                    numberpicker:min="4"
                    numberpicker:unit="1"
                    numberpicker:value="4" />

                <RelativeLayout
                    android:id="@+id/layout_price_3"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    android:background="@drawable/edittext_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_price_2">

                    <TextView
                        android:id="@+id/rupee_tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/tweleve_dp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp" />

                    <EditText
                        android:id="@+id/rupees_3"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fourty_dp"
                        android:layout_marginTop="@dimen/two_dp"
                        android:backgroundTint="@color/white"
                        android:singleLine="true"
                        android:text="20"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/fourteen_sp" />
                </RelativeLayout>

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/number_picker_4"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/number_picker_3"
                    numberpicker:custom_layout="@layout/number_picker_custom_layout"
                    numberpicker:focusable="false"
                    numberpicker:max="8"
                    numberpicker:min="6"
                    numberpicker:unit="1"
                    numberpicker:value="6" />

                <RelativeLayout
                    android:id="@+id/layout_price_4"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    android:background="@drawable/edittext_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_price_3">

                    <TextView
                        android:id="@+id/rupee_tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/tweleve_dp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp" />

                    <EditText
                        android:id="@+id/rupees_4"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fourty_dp"
                        android:layout_marginTop="@dimen/two_dp"
                        android:backgroundTint="@color/white"
                        android:singleLine="true"
                        android:text="35"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/fourteen_sp" />
                </RelativeLayout>

                <com.travijuu.numberpicker.library.NumberPicker
                    android:id="@+id/number_picker_5"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/number_picker_4"
                    numberpicker:custom_layout="@layout/number_picker_custom_layout"
                    numberpicker:focusable="false"
                    numberpicker:max="12"
                    numberpicker:min="9"
                    numberpicker:unit="1"
                    numberpicker:value="9" />

                <RelativeLayout
                    android:id="@+id/layout_price_5"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_eight_dp"
                    android:background="@drawable/edittext_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_price_4">

                    <TextView
                        android:id="@+id/rupee_tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/thirty_dp"
                        android:layout_marginTop="@dimen/tweleve_dp"
                        android:text="@string/rupee"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp" />

                    <EditText
                        android:id="@+id/rupees_5"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/fourty_dp"
                        android:layout_marginTop="@dimen/two_dp"
                        android:backgroundTint="@color/white"
                        android:singleLine="true"
                        android:text="50"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/custom_cursor"
                        android:textSize="@dimen/fourteen_sp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/proceed_btn"
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="@dimen/thirty_six_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:background="@drawable/button_bg"
                    android:elevation="@dimen/two_dp"
                    android:scaleType="centerCrop"
                    android:text="@string/proceed"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_price_5" />
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:background="@color/black"
        android:paddingBottom="@dimen/eight_dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/eight_dp"
        app:behavior_hideable="false"
        app:elevation="4dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <TextView
            android:id="@+id/bottomsheet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_dp"
            android:text="@string/bottom_sheet_rate"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/eight_dp"
            android:background="@drawable/ic_expand_less_white_24dp" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>