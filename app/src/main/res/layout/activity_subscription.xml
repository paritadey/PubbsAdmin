<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_system"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subscription">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/four_dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/toolbar_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/twenty_four_dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/subscription_tv"
                    android:layout_alignParentStart="true"
                    app:srcCompat="@drawable/ic_arrow_back_24dp" />

                <TextView
                    android:id="@+id/subscription_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/one_twenty_dp"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:padding="@dimen/four_dp"
                    android:text="@string/subscription_tv"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/manage_system_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/twenty_dp">

                <TextView
                    android:id="@+id/area_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:padding="@dimen/four_dp"
                    android:text="Area Name"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/area_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:text="Area Id"
                    android:padding="@dimen/four_dp"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/area_name" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_basic"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/one_twenty_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffffff">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/twenty_dp"
                                    android:layout_marginTop="@dimen/twenty_dp"
                                    android:layout_marginEnd="@dimen/twenty_dp"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:id="@+id/basic_plan_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/cell_shape"
                                        android:padding="18dip"
                                        android:text="Basic Plan"
                                        android:textColor="@color/color_white_01"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/basic_plan_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/white_cell_shape"
                                        android:padding="18dip"
                                        android:text="Basic Plan"
                                        android:textColor="@color/black"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/basic_plan_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/white_cell_shape"
                                        android:padding="18dip"
                                        android:text="Basic Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/basic_plan_mins"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/white_cell_shape"
                                        android:padding="18dip"
                                        android:text="Basic Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/twenty_dp"
                                    android:layout_marginTop="@dimen/twenty_dp"
                                    android:layout_marginEnd="@dimen/twenty_dp"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:id="@+id/standard_plan_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/cell_shape"
                                        android:padding="18dip"
                                        android:text="Standard Plan"
                                        android:textColor="@color/color_white_01"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/standard_plan_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Standard Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/standard_plan_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Standard Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/standard_plan_mins"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Standard Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/twenty_dp"
                                    android:layout_marginTop="@dimen/twenty_dp"
                                    android:layout_marginEnd="@dimen/twenty_dp"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:id="@+id/sweet_plan_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/cell_shape"
                                        android:padding="18dip"
                                        android:text="Sweet Plan"
                                        android:textColor="@color/color_white_01"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/sweet_plan_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/light_grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Sweet Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/sweet_plan_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/light_grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Sweet Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/sweet_plan_mins"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/light_grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Sweet Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/twenty_dp"
                                    android:layout_marginTop="@dimen/twenty_dp"
                                    android:layout_marginEnd="@dimen/twenty_dp"
                                    android:gravity="center_horizontal">

                                    <TextView
                                        android:id="@+id/premium_plan_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/cell_shape"
                                        android:padding="18dip"
                                        android:text="Premium Plan"
                                        android:textColor="@color/color_white_01"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/premium_plan_amount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/dark_grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Premium Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/premium_plan_month"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/dark_grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Premium Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/premium_plan_mins"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/dark_grey_cell_shape"
                                        android:padding="18dip"
                                        android:text="Premium Plan"
                                        android:textColor="#000"
                                        android:textSize="18sp" />

                                </TableRow>

                            </TableLayout>

                        </android.support.constraint.ConstraintLayout>
                    </HorizontalScrollView>
                </android.support.v7.widget.CardView>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
