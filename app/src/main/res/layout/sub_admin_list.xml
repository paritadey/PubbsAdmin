<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sub_admin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ten_dp">

        <ImageView
            android:id="@+id/subadmin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:layout_marginTop="@dimen/twenty_dp"
            app:srcCompat="@drawable/ic_person" />

        <TextView
            android:id="@+id/subadmin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:layout_toRightOf="@id/subadmin"
            android:padding="@dimen/two_dp"
            android:text="Full name"
            android:textColor="@color/color_black_01"
            android:textSize="@dimen/sixteen_sp" />


        <TextView
            android:id="@+id/subadmin_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subadmin_name"
            android:layout_marginStart="@dimen/thirty_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_toRightOf="@id/subadmin"
            android:padding="@dimen/four_dp"
            android:textColor="@color/color_black_01"
            android:textSize="@dimen/tweleve_sp" />


        <TextView
            android:id="@+id/area_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tweleve_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_toRightOf="@id/subadmin"
            android:visibility="gone"
            android:layout_below="@id/subadmin_mobile"/>
    </RelativeLayout>

</RelativeLayout>