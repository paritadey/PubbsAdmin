<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUsers">

    <include
        layout="@layout/app_bar_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/qr_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        android:elevation="@dimen/eight_dp"
        android:paddingBottom="@dimen/eight_dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/sort_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:layout_marginTop="@dimen/eight_dp"
            app:srcCompat="@drawable/ic_sort" />

        <TextView
            android:id="@+id/sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/sixty_dp"
            android:padding="@dimen/four_dp"
            android:text="Sort"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />

        <ImageView
            android:id="@+id/filter_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="230dp"
            android:layout_marginTop="@dimen/eight_dp"
            app:srcCompat="@drawable/ic_filter" />

        <TextView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/thirty_dp"
            android:padding="@dimen/four_dp"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp" />
        <View
            android:layout_width="@dimen/two_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/one_sixty_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@color/color_grey_02" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>