<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bicycle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/twenty_dp"
        app:srcCompat="@drawable/ic_bicycle" />

    <TextView
        android:id="@+id/bicycle_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/thirty_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_toRightOf="@id/bicycle"
        android:padding="@dimen/two_dp"
        android:text="WB213426G"
        android:textColor="@color/black"
        android:textSize="@dimen/sixteen_sp" />

    <TextView
        android:id="@+id/add_to_station"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/twenty_four_dp"
        android:layout_marginStart="@dimen/sixty_dp"
        android:layout_marginTop="@dimen/twenty_four_dp"
        android:layout_toRightOf="@+id/bicycle_number"
        android:text="Add to Station"
        android:textColor="@color/teal_A700"
        android:textSize="@dimen/sixteen_sp" />
</RelativeLayout>