<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manage_area_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AreaSubscription">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/twenty_four_dp"
            app:srcCompat="@drawable/ic_arrow_back_24dp" />

        <TextView
            android:id="@+id/subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:layout_marginStart="@dimen/one_hundred_dp"
            android:text="@string/subscription"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sixty_dp">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/one_hundred_dp">

                <TextView
                    android:id="@+id/subscription_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/fourty_dp"
                    android:text="Subscription Plans"
                    android:textColor="@color/black"
                    android:padding="@dimen/four_dp"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_basic"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp"
                    app:layout_constraintTop_toBottomOf="@id/subscription_tv">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/tweleve_dp">

                        <TextView
                            android:id="@+id/subscription_basic_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:text="Basic plan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/basic_plan_amount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:drawablePadding="@dimen/eight_dp"
                            android:hint="Enter the Basic Plan Amount"
                            android:padding="@dimen/four_dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_500"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/subscription_basic_tv" />

                        <TextView
                            android:id="@+id/basic_plan_month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:padding="@dimen/four_dp"
                            android:text="Month :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/basic_plan_amount" />

                        <EditText
                            android:id="@+id/basic_plan_month"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Month for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/basic_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/basic_plan_amount" />

                        <TextView
                            android:id="@+id/basic_plan_mins_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:text="Time :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/basic_plan_month" />

                        <EditText
                            android:id="@+id/basic_plan_mins"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Time for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/basic_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/basic_plan_month" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_standard"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp"
                    app:layout_constraintTop_toBottomOf="@id/cardView_basic">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/tweleve_dp">

                        <TextView
                            android:id="@+id/subscription_standard_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:text="Standard plan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/standard_plan_amount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:drawablePadding="@dimen/eight_dp"
                            android:hint="Enter the Standard Plan Amount"
                            android:padding="@dimen/four_dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_500"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/subscription_standard_tv" />

                        <TextView
                            android:id="@+id/standard_plan_month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:padding="@dimen/four_dp"
                            android:text="Month :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/standard_plan_amount" />

                        <EditText
                            android:id="@+id/standard_plan_month"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Month for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/standard_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/standard_plan_amount" />

                        <TextView
                            android:id="@+id/standard_plan_mins_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:text="Time :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/standard_plan_month" />

                        <EditText
                            android:id="@+id/standard_plan_mins"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Time for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/standard_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/standard_plan_month" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_sweet"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp"
                    app:layout_constraintTop_toBottomOf="@id/cardView_standard">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/tweleve_dp">

                        <TextView
                            android:id="@+id/subscription_sweet_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:text="Sweet plan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/sweet_plan_amount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:drawablePadding="@dimen/eight_dp"
                            android:hint="Enter the Sweet Plan Amount"
                            android:padding="@dimen/four_dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_500"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/subscription_sweet_tv" />

                        <TextView
                            android:id="@+id/sweet_plan_month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:padding="@dimen/four_dp"
                            android:text="Month :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sweet_plan_amount" />

                        <EditText
                            android:id="@+id/sweet_plan_month"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Month for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/sweet_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/sweet_plan_amount" />

                        <TextView
                            android:id="@+id/sweet_plan_mins_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:text="Time :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sweet_plan_month" />

                        <EditText
                            android:id="@+id/sweet_plan_mins"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Time for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/sweet_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/sweet_plan_month" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView_premium"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    app:cardCornerRadius="@dimen/eight_dp"
                    app:cardElevation="@dimen/four_dp"
                    app:layout_constraintTop_toBottomOf="@id/cardView_sweet">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/tweleve_dp">

                        <TextView
                            android:id="@+id/subscription_premium_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eight_dp"
                            android:text="Premium plan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/premium_plan_amount"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:drawablePadding="@dimen/eight_dp"
                            android:hint="Enter the Premium Plan Amount"
                            android:padding="@dimen/four_dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/grey_500"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:textSize="@dimen/fourteen_sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/subscription_premium_tv" />

                        <TextView
                            android:id="@+id/premium_plan_month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:padding="@dimen/four_dp"
                            android:text="Month :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/premium_plan_amount" />

                        <EditText
                            android:id="@+id/premium_plan_month"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Month for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/premium_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/premium_plan_amount" />

                        <TextView
                            android:id="@+id/premium_plan_mins_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/eighteen_dp"
                            android:drawablePadding="@dimen/eight_dp"
                            android:text="Time :"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/premium_plan_month" />

                        <EditText
                            android:id="@+id/premium_plan_mins"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/eight_dp"
                            android:layout_marginTop="@dimen/sixteen_dp"
                            android:background="@drawable/edittext_bg"
                            android:hint="Time for subscription"
                            android:padding="@dimen/four_dp"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            app:layout_constraintLeft_toRightOf="@+id/premium_plan_month_tv"
                            app:layout_constraintTop_toBottomOf="@id/premium_plan_month" />
                    </android.support.constraint.ConstraintLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/next"
                    android:layout_width="@dimen/one_fifty_dp"
                    android:layout_height="@dimen/thirty_six_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:background="@drawable/button_bg"
                    android:elevation="@dimen/two_dp"
                    android:scaleType="centerCrop"
                    android:text="@string/proceed"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView_premium" />

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/design_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty_dp"
        android:background="@color/black"
        android:paddingBottom="@dimen/eight_dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/eight_dp"
        app:behavior_hideable="false"
        app:elevation="4dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        tools:ignore="MissingPrefix">

        <TextView
            android:id="@+id/bottomsheet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/four_dp"
            android:text="@string/bottom_sheet_subscription"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp" />

        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/eight_dp"
            android:background="@drawable/ic_expand_less_white_24dp" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
