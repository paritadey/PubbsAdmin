<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/eight_dp">

    <ImageView
        android:id="@+id/wallet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/thirty_six_dp"
        android:layout_marginBottom="@dimen/eight_dp"
        app:srcCompat="@drawable/ic_subscription" />

    <TextView
        android:id="@+id/subscription_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/thirty_dp"
        android:layout_marginTop="@dimen/sixteen_dp"
        android:layout_toRightOf="@id/wallet"
        android:padding="@dimen/two_dp"
        android:text="Basic Plan"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp" />

    <TextView
        android:id="@+id/subscription_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subscription_name"
        android:layout_marginStart="@dimen/thirty_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_toRightOf="@id/wallet"
        android:padding="@dimen/two_dp"
        android:text="PUBBS_SUBSCRIPTION_ID123"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subscription_id"
        android:layout_marginStart="@dimen/thirty_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_toRightOf="@id/wallet"
        android:padding="@dimen/two_dp"
        android:text="16 March 2018 03:17"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp" />

</RelativeLayout>